<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardRCVvendorlist"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/grey_400"
    android:elevation="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/llLinearVendorlist"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="horizontal"
        android:padding="4dp"
        android:weightSum="2">

        <ImageView
            android:id="@+id/ivUncheck"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/radiounchecked"

            />

        <ImageView
            android:id="@+id/ivCheck"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/custom_radiobutton"
            android:src="@drawable/radiochecked"
            android:padding="2dp"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="Omkar shinde"
                android:singleLine="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:layout_marginRight="8dp"
               />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="Bhayander"
                android:drawableLeft="@drawable/location"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <!-- <TextView
                 android:id="@+id/tvMemberSince"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:gravity="center_vertical"
                 android:paddingLeft="8dp"
                 android:text="Member Since - Dec 2017"
                 android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
     -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivCall"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/callicon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"/>


                <ImageView
                    android:id="@+id/ivMessage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/messageicon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvHired"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:layout_marginRight="4dp"
                android:text="0 Times Hired"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <RatingBar
                    android:id="@+id/ratingbar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:layout_gravity="right"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="8dp"
                    android:focusable="true"
                    android:foregroundTint="@color/colorPrimaryDark"
                    android:gravity="right"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressTint="@color/colorPrimaryDark"
                    android:rating="0" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/cbViewDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/button_curve"
                    android:text="Details"
                    android:layout_gravity="center_vertical|right"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>