            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/border_greencurve"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/cvProfileImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/uploadpic"/>
                        <ImageView
                            android:id="@+id/ivaddprofileimage"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="60dp"
                            android:layout_marginTop="40dp"
                            android:background="@drawable/curvebg_white"
                            android:src="@drawable/plus"/>
                        <ImageView
                            android:id="@+id/ivremoveprofileimage"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="top|right"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/cancelreq"/>



                    </FrameLayout>






                </LinearLayout>


            </android.support.v7.widget.CardView>

            <!-- images-->

