<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/llAddMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAddCurrentAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_margin="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/border"
            android:text="Get my current location"
            android:gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="OR"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvAddNewAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_marginTop="16dp"
            android:layout_margin="4dp"
            android:background="@drawable/border"
            android:text="Add new address"
            android:gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCurrentAddForm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:minHeight="200dp"
        android:visibility="gone"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Address"
            android:textStyle="bold"
            android:paddingLeft="16dp"
            android:textSize="20sp"
            android:background="@color/green"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tvCurrentAddForm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Govandi east , Raikar chamers"
            android:gravity="center_vertical"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:paddingLeft="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llNewAddForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Address"
            android:textStyle="bold"
            android:paddingLeft="16dp"
            android:textSize="20sp"
            android:background="@color/green"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:padding="8dp"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:elevation="8dp"
            android:background="@drawable/border_greencurve">


            <EditText
                android:id="@+id/etBuilding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:hint="Building No"
                android:paddingLeft="8dp"
                android:inputType="textCapWords"
                android:background="@color/white"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:elevation="8dp"
            android:background="@drawable/border_greencurve">


            <EditText
                android:id="@+id/etStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:hint="Street"
                android:paddingLeft="8dp"
                android:background="@color/white"
                />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:elevation="8dp"
            android:background="@drawable/border_greencurve">


            <EditText
                android:id="@+id/etLandmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:hint="Landmark"
                android:paddingLeft="8dp"
                android:background="@color/white"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:elevation="8dp"
            android:background="@drawable/border_greencurve">


            <EditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:hint="City"
                android:inputType="textCapWords"
                android:paddingLeft="8dp"
                android:background="@color/white"
                />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:elevation="8dp"
            android:background="@drawable/border_greencurve">


            <EditText
                android:id="@+id/etState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:hint="State"
                android:inputType="textCapWords"
                android:paddingLeft="8dp"
                android:background="@color/white"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:elevation="8dp"
            android:background="@drawable/border_greencurve">


            <EditText
                android:id="@+id/etPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:hint="Pin"
                android:inputType="number"
                android:paddingLeft="8dp"
                android:background="@color/white"
                />
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rgAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/rbHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:checked="true"
            android:layout_marginRight="16dp"/>

        <RadioButton
            android:id="@+id/rbOffice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Office"
            android:layout_marginRight="16dp"/>

        <RadioButton
            android:id="@+id/rbOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"/>

    </RadioGroup>

    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <Button
            android:id="@+id/cbCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="Cancel"
            android:textColor="@color/white"
            android:background="@color/green"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/white"></View>

        <Button
            android:id="@+id/cbOK"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="Ok"
            android:textColor="@color/white"
            android:background="@color/green"/>



    </LinearLayout>


</LinearLayout>

